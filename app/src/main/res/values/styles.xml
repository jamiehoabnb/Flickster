<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBg</item>
        <item name="colorPrimaryDark">@color/colorBg</item>
        <item name="colorAccent">@color/colorBg</item>
    </style>

    <style name="TitleFont">
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="OverviewFont">
        <item name="android:textColor">@color/colorTextOverview</item>
        <item name="android:textSize">@dimen/text_size_overview</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_layout</item>
        <item name="android:dividerHeight">@dimen/margin_default</item>
    </style>

</resources>
